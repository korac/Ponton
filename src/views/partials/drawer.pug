div.drawer
    div.drawer__header
        h2 PONTON
        p Connect with your friends
    div.drawer-main
        div.drawer-main__header
            h2 Search Contacts
            hr
        div.drawer-main__list
            each friend in friends
                a.drawer-list__item= friend.name
    div.drawer__footer
        a(class='drawer-list__item item__user-info')
            span(class='user-name')= user.name
            span(class='user-email')= user.email
        a(href='/logout' class='drawer-list__item') Log out